<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fedfdf">

    <!-- Top Background -->
    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/top_background1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitleOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter\nVerification Code"
        android:textColor="#2F4A73"
        android:textSize="32sp"
        android:textStyle="bold"
        android:paddingStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgTop"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txtSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We have sent a 6-digit code to your email"
        android:textColor="#6C6C6C"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitleOTP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP input layout -->
    <LinearLayout
        android:id="@+id/layoutOTP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:textSize="22sp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:inputType="number"
            android:maxLength="1" />
    </LinearLayout>

    <!-- Verify Button -->
    <ImageButton
        android:id="@+id/btnVerifyOTP"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_arrow2"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
